<% li_for(line, :class => "highlight_controls_area", :style => element_style(:hidden => hidden)) do -%>
  <div id="<%= dom_id(line) %>_text">
    <%= render :partial => "lines/show_text", :locals => { :line => line } %>
  </div>
  <div class="highlight_controls">
    <%= add_before_link(:model => line, :url => { :controller => :lines, :action => :new, :feature_id => line.feature.id }) %>
    <%= link_to_remote "X", { :confirm => "Are you sure you want to delete this feature line?", :url => package_feature_line_path(line.package, line.feature, line), :method => :delete }, { :id => dom_id(line, :delete_link), :title => "Delete" } %>
  </div>
<% end -%>
