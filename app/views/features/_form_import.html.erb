<% form_tag({ :action => :import, :package_id => @package.id }, { :multipart => true, :target => "#{dom_id(@package)}_upload_frame" }) do -%>
  <% field_set_tag do -%>
    <%= label(dom_id(@package), :feature_file, "Import Feature") %><%= file_field_tag(:feature_file, :id => "#{dom_id(@package)}_feature_file") %>
    <br style="clear:left;" />
    <br style="clear:left;" />
    <%= submit_tag "Import" %>
    <%= button_to_remote("Cancel", :url => { :action => :cancel_create, :package_id => @package.id }, :id => "#{dom_id(@package)}_cancel_import") %>
  <% end -%>
<% end -%>
<iframe id="<%= dom_id(@package) %>_upload_frame" name="<%= dom_id(@package) %>_upload_frame" style="display: none"></iframe>
