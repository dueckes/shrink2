<div id="<%= dom_id(feature, :area) %>" class="feature_area">
  <div id="<%= dom_id(feature) %>_header" class="header highlight_controls_area">
    <div id="<%= dom_id(feature) %>_title" class="title">
      <%= render :partial => "features/show_title", :locals => { :feature => feature } %>
    </div>
    <div id="<%= dom_id(feature) %>_tags_area" class="tags_area">
      <%= link_to "Tags", { :controller => :features, :action => :manage_tags, :id => feature.id }, { :remote => true, :class => :show_tags_link } %>
      <div id="<%= dom_id(feature) %>_tags_list_area" class="tags_list_area">
        <div id="<%= dom_id(feature) %>_tags_list">
          <%= render :partial => "tags/show_tags", :locals => { :model => feature } %>
        </div>
        <div id="<%= dom_id(feature) %>_tags_form_area" class="tags_form_area" style="display: none;">
        </div>
      </div>
    </div>
    <div class="highlight_controls">
      <%= link_to "^", {}, { :href => "#", :id => dom_id(feature, :expand_collapse_link), :class => :feature_expand_collapse_link, :title => "Expand/Collapse" } %>
      <%= link_to icon(:folder_view), feature_in_folders_path(feature),
                  :remote => true, :id => dom_id(feature, :show_in_folder_link), :title => "View In Folder" %>
      <%= link_to icon(:anchor), folder_feature_path(feature.folder, feature),
                  { :popup => true, :id => dom_id(feature, :show_link), :title => "Permalink" } %>
      <%= link_to icon(:export), feature_export_url(:id => feature.id, :format => :feature), { :title => "Export" } %>
      <%= link_to icon(:delete, :red), folder_feature_path(feature.folder, feature),
                  :remote => true, :method => :delete , :confirm => "Are you sure you want to delete this feature?",
                  :id => dom_id(feature, :delete_link), :title => "Delete" %>
    </div>
  </div>
  <ul class="detail" style="<%= element_style(:hidden => minimized) %>">
    <li class="description_lines section">
      <%= render :partial => "description_lines/list", :locals => { :feature => feature } %>
    </li>
    <li class="scenarios">
      <h2 class="section_title">Scenarios</h2>
      <%= render :partial => "scenarios/list", :locals => { :feature => feature } %>
    </li>
  </ul>
</div>
