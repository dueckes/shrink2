hide_add_feature_form_and_show_feature(page, @feature)
page.insert_html(:before, @description_line_add_anywhere_presenter.clicked_container_dom_id,
                 :partial => "description_lines/form_new",
                 :locals => { :feature => @feature,
                              :add_anywhere_presenter => @description_line_add_anywhere_presenter })
page << @description_line_add_anywhere_presenter.show_form_js
