<div id="root_package">
  <div id="<%= dom_id(root_package) %>_header" class="header root_package_header highlight_controls_area">
    <span><%= root_package.name %></span>
    <div class="highlight_controls">
      <%= link_to "v", "#", { :id => "root_package_expand_link", :title => "Expand All" } %>
      <%= link_to "^", "#", { :id => "root_package_collapse_link", :title => "Collapse All" } %>
      <%= link_to_remote "+", { :url => { :controller => :packages, :action => :new, :parent_id => root_package.id }, :method => :get }, { :id => dom_id(root_package, :add_link), :title => "Add Sub-Package" } %>
    </div>
  </div>
  <%= render :partial => "packages/list", :locals => { :package => root_package, :feature => feature, :expanded => true } %>
</div>
