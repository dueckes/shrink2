<div class="root-element-name">
  <div id="<%= dom_id(package) %>_details">
    <%= expand_link(package) %>
    <%= link_to "Features", package_features_path(package) %>
    <%= link_to_remote "Edit", :update => dom_id(package), :url => edit_package_path(package), :method => :get %>
    <%= link_to_remote "Delete", :confirm => "Are you sure you want to delete this package?", :url => package_path(package), :method => :delete %>
  </div>
  <div id="<%= dom_id(package) %>_expand" style="display: none;"></div>
</div>
