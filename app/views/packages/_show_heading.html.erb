<div id="<%= dom_id(package) %>_heading_area" class="element_heading">
  <% if interactive -%>
    <%= link_to_remote(package.name, { :url => package_path(package), :method => :get }, { :id => "#{dom_id(package)}_toggle_link", :class => "toggle_link" }) %>
    <div id="<%= dom_id(package) %>_edit_controls" class="edit_controls">
      <%= link_to_remote "Edit", :url => edit_package_path(package), :method => :get %>
      <%= link_to_remote "Delete", :confirm => "Are you sure you want to delete this package?", :url => package_path(package), :method => :delete %>
    </div>
    <div id="<%= dom_id(package) %>_edit_form" style="display: none;">
    </div>
  <% else -%>
    <%= link_to(package.name, "javascript:void(0);", { :id => "#{dom_id(package)}_toggle_link", :class => "toggle_link" }) %>
  <% end -%>
</div>
