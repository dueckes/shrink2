<ul id="<%= dom_id(package) %>_children">
  <% package.children.each do |child_package| -%>
    <%= render :partial => "packages/show_with_li", :locals => { :package => child_package } %>
  <% end -%>
</ul>
<%= pad_after_list(package.children) -%>
<div id="<%= nested_dom_id(:new_package, package) %>">
</div>
<div id="<%= nested_dom_id(:add_package, package) %>">
  <%= link_to_remote "Add Package", :url => { :action => :new, :parent_id => package.id }, :method => :get %>
</div>
