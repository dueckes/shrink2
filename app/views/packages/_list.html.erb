<% package.children.each do |package| -%>
  <%= render :partial => "packages/show_with_div", :locals => { :package => package } %>
<% end -%>
<div id="<%= nested_dom_id(:new_package, package) %>">
</div>
<div id="<%= nested_dom_id(:add_package, package) %>">
  <%= link_to_remote "Add Package", :url => { :action => :new, :parent_id => package.id }, :method => :get %>
</div>
