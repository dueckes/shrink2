<ul id="<%= dom_id(package) %>_expand_area" class="expand_area" style="<%= element_style(:hidden => !expanded) %>">
  <% package.children.each do |child_package| -%>
    <%= render :partial => "packages/show", :locals => { :package => child_package, :feature => feature, :hidden => false } %>
  <% end -%>
  <li id="<%= nested_dom_id(:new_package, package) %>" style="display: none;">
  </li>
  <%= render :partial => "packages/list_features", :locals => { :package => package } %>
</ul>
