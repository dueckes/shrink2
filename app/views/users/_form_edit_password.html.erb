<% remote_form_for(:user, user, :url => { :controller => :users, :action => :update_password, :id => user.id },
                   :html => { :method => :put, :id => :user_edit_password_form, :class => "user_form simple edit" },
                   :builder => UserFormBuilder) do |form| -%>
  <% field_set_tag do -%>
    <%= render :partial => "users/form_common_password", :locals => { :form => form } %>
    <%= form.commit_button %>
    <div id="<%= dom_id(user) %>_errors" class="errors">
    </div>
  <% end -%>
<% end -%>
