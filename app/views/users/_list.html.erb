<ul id="users">
  <% users.each do |user| %>
    <% li_for(user, { :style => element_style(:hidden => user == hide) }, { :when_permitted_to => [:show, user] }) do -%>
      <%= link_to_remote user.login, { :url => user_path(user), :method => :get }, { :id => dom_id(user, :show_link) } %>
    <% end -%>
  <% end -%>
</ul>
