<%= javascript_tag %{
  var stepsElement = $('##{dom_id(scenario, :steps)}');
  stepsElement.sortable({
    placeholder: 'drag_placeholder',
    forcePlaceholderSize: true,
    update: function() {
      $.post('#{url_for(:controller => :steps, :action => :reorder)}', '_method=put&' + $(this).sortable('serialize'));
    }
  });
} %>
